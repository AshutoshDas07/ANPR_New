#:kivy 1.1.0

Root:
    BoxLayout:
        input_image: input_image
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 45
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Predict'
                on_release: root.save()

        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: input_image
                source: ""
            BoxLayout:
                orientation: 'vertical'
                Image:
                    id: output_image
                    source: ""
            
                Label:
                    id: plate_number
                    size_hint: 0.5, 0.45
                    font_size: '20sp'
                    text: "     PLATE NUMBER:"
                    text_size: self.size
                    halign: "right"
                    valign: "center"

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

